
@{
    ViewData["Title"] = "Index";
    List<Blog> blogs = Model;
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Blog</h4>
                <a asp-action="Create" class="btn btn-primary">Create</a>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Image</th>
                                <th>Name</th>
                                <th>Main Description</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Blog blog in blogs)
                            {
                                <tr>
                                    <td>
                                        <img src="~/img/blog/@blog.Image" style="width:100px !important ; height:100px !important" />
                                    </td>
                                    <td>
                                        @blog.Name
                                    </td>
                                    <td>
                                        @Html.Raw(blog.Description)
                                    </td>
                                    <td>
                                        <a asp-action="Detail" asp-route-id="@blog.Id" class="btn btn-success">Detail</a>
                                        <a asp-action="Update" asp-route-id="@blog.Id" class="btn btn-warning">Update</a>
                                        <a asp-action="Delete" asp-route-id="@blog.Id" class="btn btn-danger">Delete</a>
                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

