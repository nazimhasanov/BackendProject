@{
    ViewData["Title"] = "Index";
    List<UserViewModel> users = Model;
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body bg-dark font-weight-bold text-white">
                <h4 class="card-title text-white">Users</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th class="text-white">Name</th>
                                <th class="text-white">Username</th>
                                <th class="text-white">Email</th>
                                <th class="text-white">Role</th>
                                <th class="text-white">IsDeactive</th>
                                <th class="text-white">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in users)
                            {
                                <tr>
                                    <td class="text-white">@user.Name</td>
                                    <td class="text-white">@user.Username</td>
                                    <td class="text-white">@user.Email</td>
                                    <td class="text-white">@user.Role</td>
                                    <td class="text-white">@user.IsDeactive</td>
                                    <td class="text-white">
                                        <a class="btn btn-success" asp-action="ChangePassword" asp-route-id="@user.Id">Change Password</a>
                                        <a class="btn btn-primary" asp-action="ChangeRole" asp-route-id="@user.Id">Change Role</a>
                                        @if (user.IsDeactive)
                                        {
                                            <a class="btn btn-info" asp-action="Activity" asp-route-id="@user.Id">Active</a>
                                        }
                                        else
                                        {
                                            <a class="btn btn-danger" asp-action="Activity" asp-route-id="@user.Id">Deactive</a>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

