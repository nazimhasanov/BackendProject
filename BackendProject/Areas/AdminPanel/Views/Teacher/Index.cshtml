
@{
    ViewData["Title"] = "Index";
    List<Teacher> teachers = Model;
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body bg-dark font-weight-bold text-white">
                <p style="padding-bottom: 10px">
                    <a asp-action="Create" class="btn btn-success">Create</a>
                </p>
                <h4 class="card-title text-white">Teachers</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th class="text-white">Image</th>
                                <th class="text-white">Full Name</th>
                                <th class="text-white">Position</th>
                                <th class="text-white">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var teacher in teachers)
                            {
                                <tr>
                                    <td><img src="~/img/teacher/@teacher.Image" style="width: 100px !important; height:100px !important; object-fit: cover !important" /></td>
                                    <td class="text-white">@teacher.FullName</td>
                                    <td class="text-white">@teacher.Position.FullName</td>
                                    <td>
                                        <a class="btn btn-success" asp-action="Detail" asp-route-id="@teacher.Id">Detail</a>
                                        <a class="btn btn-primary" asp-action="Update" asp-route-id="@teacher.Id">Update</a>
                                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@teacher.Id">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <div>
                        <nav aria-label="..." id="pagination1">
                            <ul class="pagination pagination-lg">
                                @for (int i = 1; i <= ViewBag.PageCount; i++)
                                {
                                    if (ViewBag.Page == i)
                                    {
                                        <li class="page-item disabled">
                                            <a class="page-link" asp-action="Index" asp-route-page="@i">@i</a>
                                        </li>
                                    }
                                    else
                                    {
                                        <li class="page-item">
                                            <a class="page-link" asp-action="Index" asp-route-page="@i">@i</a>
                                        </li>
                                    }
                                }
                            </ul>
                        </nav>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
