@model Teacher

@{ 
    ViewData["Title"] = "Create"; 
}

<div class="row">
    <div class="col-md-12 grid-margin stretch-card d-flex">
        <div class="card">
            <div class="card-body bg-dark font-weight-bold text-white">
                <h4 class="card-title text-white">Create Teacher</h4>
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                <form class="forms-sample" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label asp-for="Photo"></label>
                        <input class="form-control-file" accept="image/*" asp-for="Photo">
                        <span class="text-danger" asp-validation-for="Photo"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="FullName"></label>
                        <input class="form-control" asp-for="FullName" placeholder="FullName">
                        <span class=" text-danger" asp-validation-for="FullName"></span>
                    </div>
                    <div class="form-group">
                        <select class="custom-select" name="ProfessionId">
                            <option value="">Select Profession</option>
                            @foreach (Position position in ViewBag.Position)
                            {
                                 <option value="@position.Id">@position.FullName</option>
                             }
                        </select>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.TeacherDetail.Title"></label>
                        <input class="form-control " asp-for="@Model.TeacherDetail.Title" placeholder="AboutMe">
                        <span class=" text-danger" asp-validation-for="@Model.TeacherDetail.Title"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.TeacherDetail.Degree"> </label>
                        <input class="form-control" asp-for="@Model.TeacherDetail.Degree" placeholder="Degree">
                        <span class=" text-danger" asp-validation-for="@Model.TeacherDetail.Degree"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.TeacherDetail.Experience"></label>
                        <input class="form-control" asp-for="@Model.TeacherDetail.Experience" placeholder="Experience">
                        <span class=" text-danger" asp-validation-for="@Model.TeacherDetail.Experience"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.TeacherDetail.Hobbies"></label>
                        <input class="form-control" asp-for="@Model.TeacherDetail.Hobbies" placeholder="Hobbies">
                        <span class=" text-danger" asp-validation-for="@Model.TeacherDetail.Hobbies"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.TeacherDetail.Faculty"> </label>
                        <input class="form-control" asp-for="@Model.TeacherDetail.Faculty" placeholder="Faculty">
                        <span class=" text-danger" asp-validation-for="@Model.TeacherDetail.Faculty"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.TeacherDetail.Email"> </label>
                        <input class="form-control" asp-for="@Model.TeacherDetail.Email" placeholder="MailMe">
                        <span class=" text-danger" asp-validation-for="@Model.TeacherDetail.Email"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.TeacherDetail.Phone"> </label>
                        <input class="form-control" asp-for="@Model.TeacherDetail.Phone" placeholder="Number">
                        <span class=" text-danger" asp-validation-for="@Model.TeacherDetail.Phone"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.TeacherDetail.Skype"> </label>
                        <input class="form-control" asp-for="@Model.TeacherDetail.Skype" placeholder="Skype">
                        <span class=" text-danger" asp-validation-for="@Model.TeacherDetail.Skype"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.TeacherDetail.Language"> </label>
                        <input class="form-range" asp-for="@Model.TeacherDetail.Language" type="range" placeholder="LanguageValue">
                        <span class=" text-danger" asp-validation-for="@Model.TeacherDetail.Language"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.TeacherDetail.TeamLeader"> </label>
                        <input class="form-range" asp-for="@Model.TeacherDetail.TeamLeader" type="range" placeholder="TeamLeaderValue">
                        <span class=" text-danger" asp-validation-for="@Model.TeacherDetail.TeamLeader"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.TeacherDetail.Development"> </label>
                        <input class="form-range" asp-for="@Model.TeacherDetail.Development" type="range" placeholder="DevelopmentValue">
                        <span class=" text-danger" asp-validation-for="@Model.TeacherDetail.Development"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.TeacherDetail.Innovation"> </label>
                        <input class="form-range" asp-for="@Model.TeacherDetail.Innovation" type="range" placeholder="InnovtionValue">
                        <span class=" text-danger" asp-validation-for="@Model.TeacherDetail.Innovation"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.TeacherDetail.Communication"> </label>
                        <input class="form-range" asp-for="@Model.TeacherDetail.Communication" type="range" placeholder="ComunicationValue">
                        <span class=" text-danger" asp-validation-for="@Model.TeacherDetail.Communication"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.TeacherDetail.Design"> </label>
                        <input class="form-range" asp-for="@Model.TeacherDetail.Design" type="range" placeholder="DesignValue">
                        <span class=" text-danger" asp-validation-for="@Model.TeacherDetail.Design"></span>
                    </div>
                    <button type="submit" class="btn btn-success mr-2">Create</button>
                    <a asp-action="Index" class="btn btn-secondary">Go Back</a>
                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts{

    <partial name="_ValidationScriptsPartial" />
}

