@{
    ViewData["Title"] = "Index";
    List<Category> categories = Model;
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body bg-dark font-weight-bold text-white">
                <p style="padding-bottom: 10px">
                    <a asp-action="Create" class="btn btn-success">Create</a>
                </p>
                <h4 class="card-title text-white">Events</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th class="text-white">Name</th>
                                <th class="text-white">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var category in categories)
                            {
                                <tr>
                                    <td class="text-white">@category.Title</td>
                                    <td>
                                        <a class="btn btn-primary" asp-action="Update" asp-route-id="@category.Id">Update</a>
                                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@category.Id">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <div>                        
                 </div>

                </div>
            </div>
        </div>
    </div>
</div>
