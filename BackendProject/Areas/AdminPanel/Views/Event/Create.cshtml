
@model Event;
@{
    ViewData["Title"] = "Create";
}

<div class="row">
    <div class="col-md-12 grid-margin stretch-card ">
        <div class="card">
            <div class="card-body bg-dark font-weight-bold text-white">
                <h4 class="card-title text-white">Create Event</h4>
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                <form class="forms-sample" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label asp-for="Photo">Image</label>
                        <input asp-for="Photo" class="form-control" placeholder="Image" accept="*/image">
                        <span asp-validation-for="Photo" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Title"></label>
                        <input asp-for="Title" class="form-control" placeholder="Name">
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Venue"></label>
                        <input asp-for="Venue" class="form-control" placeholder="Adress">
                        <span asp-validation-for="Venue" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="TimeStart"></label>
                        <input asp-for="TimeStart" class="form-control" placeholder="StartingTime">
                        <span asp-validation-for="TimeStart" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="TimeEnd"></label>
                        <input asp-for="TimeEnd" class="form-control" placeholder="EndTime">
                        <span asp-validation-for="TimeEnd" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.EventDetail.Description"></label>
                        <textarea asp-for="@Model.EventDetail.Description" class="form-control" rows="4"></textarea>
                        <span asp-validation-for="@Model.EventDetail.Description" class="text-danger"></span>
                    </div>
                    <div class="form-group" id="Speakers">
                        <label>Select Spiker</label>
                        <select multiple class="custom-select" name="SpeakersId">
                            @foreach (Speaker speaker in ViewBag.Speakers)
                            {
                                <option value="@speaker.Id">@speaker.FullName</option>
                            }
                        </select>
                    </div>
                    <div class="form-group" id="Categories">
                        <label>Select Category</label>
                        <select multiple class="custom-select" name="CategoriesId">
                            @foreach (Category category in ViewBag.Categories)
                            {
                                <option value="@category.Id">@category.Title</option>
                            }
                        </select>
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Create</button>
                    <a asp-action="Index" class="btn btn-light">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts{

    <partial name="_ValidationScriptsPartial" />
}
