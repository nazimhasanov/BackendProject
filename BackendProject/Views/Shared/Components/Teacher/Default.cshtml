@model List<Teacher>

<div class="teacher-area pt-150 pb-105">
    <div class="container">
        <div class="row">
            @foreach (Teacher teacher in Model)
            {

            <div class="col-md-3 col-sm-4 col-xs-12">
                <div class="single-teacher mb-45">
                    <div class="single-teacher-img">
                        <a asp-controller="Teacher" asp-action="Detail" asp-route-id="@teacher.Id" ><img src="~/img/teacher/@teacher.Image" alt="teacher"></a>
                    </div>
                    <div class="single-teacher-content text-center">
                        <h2><a asp-controller="Teacher" asp-action="Detail" asp-route-id="@teacher.Id">@teacher.FullName</a></h2>
                        <h4>@teacher.Position.FullName</h4>
                        <ul>
                            @foreach (SocialMedia social in teacher.SocialMedias)
                            {
                                <li><a href=@social.Link>@Html.Raw(social.Icon)</a></li>

                            }
                        </ul>
                    </div>
                </div>
            </div>

            }
            
        </div>
    </div>
</div>